---
const { blog } = Astro.props
---
<style>
  @import url('https://fonts.googleapis.com/css2?family=Baloo+Bhaijaan+2&display=swap');

  .card {
    border-top: 2px solid #ccc;
    border-bottom: 2px solid #ccc;
    font-family:  'Baloo Bhaijaan 2' ,cursive;
    width: 100%;
    display: flex;
    padding: 1rem;
    align-items: center;
    gap: 1rem;
  }

  img {
    width: 100%;
    height: 100%;
  }

  .card-image {
    width: 12vw;
    height: 12vw;
  }

  .card-date {
    font-size: clamp(0.8rem, 1.5vw, 1.7rem);
    color: #8c8c8c;
  }

  .card-title a {
    font-size: clamp(0.8rem, 2vw, 2.75rem);
    line-height: 1%;
    font-weight: bold;
    color: #5c5c5c;
    text-decoration: none;
  }
  
  .card-title a:hover {
    color: #000;
    text-decoration: underline;
  }

  .card-desc {
    text-align: justify;
    font-size: clamp(0.6rem, 1.2vw, 1.5rem);
    color: #8c8c8c;
  }

  @media screen and (max-width: 500px) {
    .card {
      border-top-width: 1px;
      border-bottom-width: 1px;
    }
  }
</style>

<div class="card">
    <div class="card-image"><img src={blog.image} alt={blog.title} /></div>
    <div class="content">
      <div class="card-date">{blog.date}</div>
      <div class="card-title"><a href={`/blog/${blog.name}`}>{blog.title}</a></div>
      <div class="card-desc">{blog.description}</div>
    </div>
</div>