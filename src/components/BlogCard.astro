---
const { blog } = Astro.props
---
<style>
  @import url('https://fonts.googleapis.com/css2?family=Baloo+Bhaijaan+2&display=swap');

  .card {
    border-top: 2px solid #ccc;
    border-bottom: 2px solid #ccc;
    font-family:  'Baloo Bhaijaan 2' ,cursive;
    width: 100%;
    height: 20%;
    display: flex;
    padding: 1rem;
    align-items: center;
    gap: 1rem;
  }

  img {
    width: 10vw;
    height: 10vw;
  }

  .card-date {
    font-size: 1.5rem;
    font-weight: bold;
    color: #8c8c8c;
  }

  .card-title a {
    font-size: 2rem;
    font-weight: bold;
    color: #5c5c5c;
    text-decoration: none;
  }

  .card-title a:hover {
    color: #000;
    text-decoration: underline;
  }

  .card-desc {
    text-align: justify;
    font-size: 1.25rem;
    color: #8c8c8c;
  }
</style>

<div class="card fade-down">
    <div class="card-image"><img src={blog.image} /></div>
    <div class="content">
      <div class="card-date">{blog.date}</div>
      <div class="card-title"><a href=`/blog/${blog.name}`>{blog.title}</a></div>
      <div class="card-desc">{blog.description}</div>
    </div>
</div>
